{
  "name": "mathbox-react-root",
  "license": "ISC",
  "workspaces": [
    "./example",
    "./mathbox-react"
  ],
  "devDependencies": {
    "eslint": "^8.30.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-import-resolver-typescript": "3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "prettier": "2.7.1",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "lint": "yarn workspaces foreach run lint",
    "format": "yarn workspaces foreach run format",
    "test": "yarn workspaces foreach run test",
    "global:lint": "eslint \"$INIT_CWD/src/**/*.{ts,tsx}\" --max-warnings=0",
    "global:format": "prettier $INIT_CWD/src --check",
    "global:autofix": "cd $INIT_CWD && yarn global:format --write && yarn global:lint --fix"
  }
}
