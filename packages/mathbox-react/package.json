{
  "name": "mathbox-react",
  "version": "0.3.0",
  "description": "React wrapper for Mathbox",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/ChristopherChudzicki/mathbox-react",
    "directory": "mathbox-react"
  },
  "author": "Chris Chudzicki",
  "main": "build/cjs/index.js",
  "exports": {
    ".": {
      "import": "./build/esm/index.js",
      "require": "./build/cjs/index.js"
    },
    "./threestrap": {
      "import": "./build/esm/threestrap/index.js",
      "require": "./build/cjs/threestrap/index.js"
    }
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "rm -rf ./build && yarn build-esm && yarn build-cjs",
    "build-esm": "tsc --project tsconfig.esm.json",
    "build-cjs": "tsc --project tsconfig.cjs.json",
    "build-watch": "tsc --watch",
    "storybook": "start-storybook -p 6006",
    "lint": "eslint \"**/*.ts?(x)\"",
    "prepack": "yarn build",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "7.22.20",
    "@babel/preset-env": "7.22.20",
    "@mathbox-react/eslint-config": "workspace:*",
    "@mathbox-react/tsconfig": "workspace:*",
    "@storybook/addon-actions": "7.0.18",
    "@storybook/addon-essentials": "7.0.18",
    "@storybook/addon-interactions": "7.0.18",
    "@storybook/addon-links": "7.0.18",
    "@storybook/builder-webpack5": "^7.0.0",
    "@storybook/manager-webpack5": "^6.5.15",
    "@storybook/react": "7.0.18",
    "@storybook/testing-library": "0.2.1",
    "@testing-library/react": "14.0.0",
    "@types/jest": "29.5.5",
    "@types/lodash": "4.14.198",
    "@types/react": "18.2.21",
    "@types/three": "0.148.0",
    "babel-jest": "27.5.1",
    "babel-loader": "9.1.3",
    "eslint": "^8.32.0",
    "jest": "27.5.1",
    "mathbox": "2.3.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "three": "0.152.2",
    "ts-jest": "29.1.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "mathbox": "^2.3.1",
    "react": "^17.0.2 || ^18.0.0",
    "three": ">=0.118.0"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
